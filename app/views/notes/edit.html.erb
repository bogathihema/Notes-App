<div class = "container">
  <div class = "row">
   <div class = "row">
     <div class = "col-sm-2"></div>
     <div class = "col-sm-8">
       <h1>Edit note- <%=@note.title%></h1>
       <%= form_with model: [@user, @note], url: user_note_path(user_id: @user.id, id: @note.id), method: :put do  |f|%>
       <div class = "row form-group">
         <div class = "col">
         <%=f.text_field :title, :required => true, placeholder: "Enter Title", class: "form-control"%><br>
         </div>
       </div>

       <div class = "row form-group">
         <div class = "col">
           <%=f.text_area :body, :required => true, placeholder: "Enter Text", class: "form-control"%><br>
         </div>
       </div>

       <div class = "row form-group">
       <div class = "col text-center">
        <%= f.submit class: "form-control btn btn-primary"%>
       </div>
       </div>
       <%end%>

      </div>
     </div>
 </div>
 <br>
