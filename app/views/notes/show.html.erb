<div class = "container">
  <div class = "row">
    <h2>Note Details: <%=@note.title%></h2>
  <div class = "row">
    <div class = "col text-center">
      <div class="alert alert-success">
        <strong><%=@note.body%></strong>
      </div>
      <div>
    </div>
    </div>
    </div>
    </div>
    <br>
    <br>
  <div class = "row">
    <div class = "col-2">
    <div class = "col-8">
    <h2>Tag Details:</h2>

    <div class ="row">
    <div class = "col-sm-3">
      <h4 class = "text-danger">Tag By:</h4>
      </div>
      <div class = "col-sm-9">
      <h4 class = "text-danger">Tag:</h4>
      </div>
      </div>
      <hr>
      <% if @tags.present? %>
        <% @tags.each do |tag| %>
          <div class ="row">
          <div class = "col-sm-3">
            <p class = "text-primary"><%=tag.name%><p>
            </div>
            <div class = "col-sm-9">
            <%=tag.tag%>
            </div>
            </div>
            <hr>
        <% end %>
      <% else %>
        <h4 class = "text-danger">Tags are not available for this note......</h4>
      <% end %>
  </div>
  </div>
  <br>
  <br>
  </div>
  <br>
  <div class = "row">
    <div class = "col text-center">
      <div class = "col-sm-6 text-left">
        <a href= "<%= user_notes_path(@user.id) %>", class = "btn btn-danger rounded-0">BACK</a>
      </div>

    </div>
    </div>
    </div>

